                        var info = {
                            userId: name + date,   //名称+创建日期时间戳，用于唯一标识用户
                            name: name,   //名称
                            title: title,  //头衔
                            introduction: introduction,    //介绍
                            avatar: ''     //头像地址
                        }
                        $.post('/api/guests',info,function(data){
                            if(!data || !data.guests){
                                //保存失败
                            }else{
                                //保存成功
                                var html = `<div><img src="${$('#c-r-s-panel-guests-addnew-avatar').attr('src')}" title="${$('#c-r-s-panel-guests-addnew-guestName').val()}"></div>`
                                $('#c-r-s-panel-guests-list div:last-child').prev().after(html)
                            }

                        })
                        /*向服务器发送请求，判断是否保存成功，成功返回1，失败返回-1
                        /*
                        /*
                        /*
                        */
                        $('#c-r-s-panel-guests-addnew-avatar').attr({
                            src:'/static/image/avatar_default.jpg'
                        })
                        $('#c-r-s-panel-guests-addnew-guestName').val('')
                        $('#c-r-s-panel-guests-addnew-guestTitle').val('')
                        $('#c-r-s-panel-guests-addnew-guestIntroduction').val('')
                    }
                }
            }).iconClickBind().iconHoverBind()
        })
    </script>
</head>
