<script>
    wx.ready(function(){
            //图片接口
            //拍照、本地选图
            $("#wexinImage").click(function(event){
                wx.chooseImage({
                    count: 1,
                    success: function (res) {
                        images.localId = res.localIds;
                        if (images.localId.length == 0) return;      
                        images.date = new Date().getTime();
                        var localData = images.localId[0];
                        if(!!window.__wxjs_is_wkwebview){
                            wx.getLocalImgData({
                                localId: images.localId[0], // 图片的localID
                                success: function (res) {
                                    localData = res.localData; // localData是图片的base64数据，可以用img标签显示
                                }
                            });    
                        }
                        var msg = {
                            from: "<%= nickname %>",
                            content: '<img src="'+localData+'" id="weixinLocalImage'+images.date+'" data-imgurl="'+localData+'" class="imageUnUpload weixinLocalImage">',
                            headimgurl: "<%= headimgurl %>",
                            sex: '<%= sex %>',
                            province: '<%= province %>'
                        }
                        $("#listPanel").append(messageBoxCompiled(msg,"right"));
                        var scrollHeight = $("#listPanel")[0].scrollHeight - $("#listPanel")[0].clientHeight;
                        $("#listPanel").animate({scrollTop: scrollHeight}, 300);
                        var i = 0, length = images.localId.length;
                        images.serverId = [];
                        msg.mediaId = localData;
                        msg.MsgType = "image";
                        msg.content = '';
                        function upload() {
                            wx.uploadImage({
                                localId: images.localId[i],
                                success: function (res) {
                                    var id = '#weixinLocalImage'+images.date
                                    var current = $(id).attr('src')
                                    images.previewArr.push(current)
                                    $(id).removeClass('imageUnUpload').on('click',function(){
                                        var current = $(this).attr('src')
                                        wx.previewImage({
                                            current: current,
                                            urls: images.previewArr
                                        });
                                    });
                                    showNotification('上传成功');
                                    images.serverId.push(res.serverId);
                                    msg.MsgType = 'image';
                                    msg.content = '';
                                    msg.mediaId = images.serverId[0];
                                    allChat.emit("public_message", msg);
                                },
                                fail: function (res) {
                                    showNotification('抱歉,上传失败');
                                }
                            });
                        }
                        upload();
                    }
                });
            })
    })
</script>
<script>
    $(function ($) {
        setTimeout(function(){
                $("#loadingWrap").animate({
                opacity:0
            },1000)
            setTimeout(function(){
                $("#loadingWrap").css({
                    display: 'none'
                })
            },1100)
        },1000)
        
        //读取allChat消息
        //0未加载 1加载完成 2无更多消息
        var loadMessageFlag = 0;
        //定义函数：加载消息
        function loadMessage(page, callback){
            $.get("/api/allChat/getMessage", {
                "page": page,
                "origin": window.location.href
            }, function(data){
                if(data == "-1" || data.length <= 0){
                    loadMessageFlag = 2;
                }else{
                    var compiled = _.template($("#message-template").html());
                    $("#listPanel").prepend(compiled({data}));
                    $('.weixinServerImageActive').on('click',function(){
                        var current = $(this).attr('src')
                        current = 'http://' + window.location.host + current
                        wx.previewImage({
                            current: current,
                            urls: images.previewArr
                        });
                    }).removeClass('weixinServerImageActive');
                    data.forEach(function(item){
                        if(!!item.MsgType&&item.MsgType=="image"){
                            var current = item.mediaId
                            current = 'http://' + window.location.host + current
                            for(var i = images.previewArr.length;i > 0;i--){
                                images.previewArr[i]=images.previewArr[i-1];
                            }
                            images.previewArr[0]=current;
                        }
                    })
                    //发出加载成功信号
                    loadMessageFlag = 1;
                }
                callback && callback();
            })
        }
        //初始化读取第page=0页
        var page = 0;
        loadMessage(page, function () {
             loadMessageFlag = 0;
             var scrollHeight = $("#listPanel")[0].scrollHeight - $("#listPanel")[0].clientHeight;
            $("#listPanel").animate({scrollTop: scrollHeight}, 300);
        });
        //定义函数：touch事件
        var myTouchEvent = function(){
            var swip_time = 300,
            swip_dis = 30,
            point_start,
            point_end,
            time_start,
            time_end,
            //1 上 2 右 3 下 4左
            result;

            if("ontouchstart" in window){
                var startEvt = "touchstart",
                moveEvt = "touchmove",
                endEvt = "touchend";
            }else{
                var startEvt = "mousedown",
                moveEvt = "mousemove",
                endEvt = "mouseup";
            }
            var getPos = function(e){
                var touches = e.touches;
                if(touches && touches[0]) {
                    return { x : touches[0].clientX ,
                            y : touches[0].clientY };
                }
                return { x : e.clientX , y: e.clientY };
            }
            var getDistance = function(p1,p2){
                return parseInt(Math.sqrt(Math.pow(Math.abs(p1.x - p2.x),2)+Math.pow(Math.abs(p1.y - p2.y),2)));
            }
            var getDirection = function(p1,p2){
                var angle = Math.atan2(p1.y-p2.y,p2.x-p1.x)*180/Math.PI;
                if(angle<=45&&angle>=-45) return "right";
                if(angle>=45&&angle<=135) return "up";
                if(angle>=135 || angle<=-135) return "left";
                if(angle<=-45&&angle>=-135) return "down";
            }
            var startEvtHandle = function(e){
                var pos = getPos(e);
                var touches = e.touches;
                if(!touches || touches.length == 1){
                    point_start = getPos(e);
                    time_start = new Date().getTime();
                }
                //显示刷新图标
                $("#notification").css({height:0,overflow:"hidden"}).html("<i class='fa fa-spinner fa-pulse fa-2x fa-fw'></i><span class='sr-only'>释放加载更多</span>").show();
                point_end = pos;
            }
            var transformYPre = 0;
            var moveEvtHandle = function(e){
                point_end = getPos(e);
                var y = point_end.y - point_start.y;      
                if(y>0&&y>80){
                    y = 80;
                }else if(y<0){
                    y = 0;
                }
                transformYPre += y - transformYPre;
                $("#listPanel").css({
                    transition: "all 1s",
                    transform: "translate3d(0,"+transformYPre+"px,0)"
                })
                $("#notification").css({
                    transition: "all 1s",
                    height: transformYPre+"px",
                    lineHeight: transformYPre+"px"
                })
                e.preventDefault();
            }
            var endEvtHandle = function(e){
                time_end = new Date().getTime();
                var dis = getDistance(point_start,point_end);
                var time = time_end - time_start;
                //构成滑动事件
                if(dis >= swip_dis && time >= swip_time){
                    var dir = getDirection(point_start,point_end),
                        disY = point_end.y - point_start.y,
                        disX = point_end.x - point_start.x;
                    if(disY>=80&&dir=="down"){
                        result = 3;
                        //下拉行为有效
                        loadMessage(++page);
                        //加载完成后释放 等待30s
                        var timer = setInterval(function(){
                            if(loadMessageFlag){
                                $("#listPanel").css({
                                transition: "all 1s",
                                transform: "translate3d(0,0,0)"
                                })
                                //显示加载成功
                                if(loadMessageFlag == 1) $("#notification").html("<i class='fa fa-check-circle-o fa-2x fa-fw' style='color: #00EE00'></i><span class='sr-only'>Success</span>");
                                else if(loadMessageFlag == 2) $("#notification").html("没有更多消息了=_="); 
                                loadMessageFlag = 0;
                                setTimeout(function(){
                                    $("#notification").css({height:"30px",lineHeight:"30px"}).html("").hide();
                                    clearInterval(timer);
                                },300);
                            }
                        });
                        //30s后停止
                        setTimeout(function(){
                            clearInterval(timer);
                            //显示加载失败
                            $("#notification").html("<i class='fa fa-remove fa-4x fa-fw' style='color: #00EE00'></i><span class='sr-only'>Failed</span>");
                            loadMessageFlag = false;    
                            setTimeout(function(){
                                $("#notification").css({height:"30px",lineHeight:"30px"}).html("").hide();
                            },300);
                        },31000);
                    }else if(disX>=80&&dir=="right"){   
                        result = 2;
                    }else if(disX<-30&&dir=="left"){
                        result = 4;
                    }else if(disY<-30&&dir=="up"){
                        $("#listPanel").scrollTop(parseInt(Math.abs(point_end.y - point_start.y)));
                        result = 1;
                    }
                }else{
                        $("#listPanel").css({
                            transition: "all 1s",
                            transform: "translate3d(0,0,0)"
                        }).animate({scrollTop: '30px'}, 300);
                        $("#notification").css({height:"30px",lineHeight:"30px"}).html("").hide();
                    }
            }
            // $("#container").on(startEvt,startEvtHandle).on(moveEvt,moveEvtHandle).on(endEvt,endEvtHandle);  
            $("#listPanel").on(startEvt,function(e){
                if($(this).scrollTop() <= 0){
                    startEvtHandle(e);
                    $(this).on(moveEvt,moveEvtHandle);
                    $(this).on(endEvt,function(e){
                        endEvtHandle(e);
                        $(this).off(moveEvt).off(endEvt);
                    });
                }
            })
        }
        myTouchEvent();
        //socket.io
        // var allChat = io("/allChat");
        allChat.on("connect", function(){
            allChat.emit("notification", {from:"<%= nickname %>",openid:"<%= openid %>", content: "new connection"})  
        })
        allChat.on("notification", function(msg){
            showNotification(msg.content);
        })
        allChat.on("public_message", function (msg) {
            $("#listPanel").append(messageBoxCompiled(msg));
        })
        allChat.on("vote_check",function(msg){
            var html = "<i class='fa fa-spinner fa-pulse fa-3x fa-fw'></i><span class='sr-only'>Loading...</span>"
            var clearMyLoading = myLoading("Waiting...",html)
            if(msg.res == "1"){
                //未投票
                voteItem = {
                    username: "<%= username %>",
                    voteId: $("#votePanel").attr("data-vote-id"),
                    openid: "<%= openid %>",
                    nickname: "<%= nickname %>"
                }
                var items = document.querySelector("#votePanel").querySelectorAll("[data-vote-choose='1']")
                for(var i = 0;i < items.length;i++){
                    var key = items[i].dataset.optionId
                    voteItem[key] = key
                }
                allChat.emit("vote",voteItem)
                clearMyLoading()
                html = "<i class='fa fa-check-circle-o fa-4x fa-fw' style='color: #00EE00'></i><span class='sr-only'>Success</span>"
                clearMyLoading = myLoading("您贡献上了自己的一票 ^_^ ~",html)
                setTimeout(function () {
                    clearMyLoading()
                },1200)
            }else{
                //已投票或错误
                clearMyLoading()
                html = "<i class='fa fa-remove fa-4x fa-fw' style='color: #00EE00'></i><span class='sr-only'>Failed</span>"
                clearMyLoading = myLoading("您已经交出自己的票票了╮(￣▽￣\")╭",html)
                setTimeout(function () {
                    clearMyLoading()
                },1200)
            }
            $("#voteSubmit").off().animate({
                background:"rgba(57,138,202,.3)"
            },1000)
            $("#votePanel").children("p").off()
        })
        allChat.on("vote",function(info){
            if(!!info && info.res instanceof Array){
                for(var i = 0;i < info.res.length;i++){
                     $("#votePanel").children("[data-option-id = '"+ info.res[i].id +"']").attr({
                         "data-vote-count":info.res[i].count
                     }).children(".voteCount").html(info.res[i].count)
                }
            } 
        })
        $("#sendBtn").click(function () {
            var msg = {
                from: "<%= nickname %>",
                content: $("#inputText").html(),
                headimgurl: "<%= headimgurl %>",
                sex: '<%= sex %>',
                province: '<%= province %>'
            }
            //内容为空则返回
            if(!msg.content) return;
            allChat.emit("public_message", msg);
            $("#inputText").html("");
            $("#listPanel").append(messageBoxCompiled(msg,"right"));
            var scrollHeight = $("#listPanel")[0].scrollHeight - $("#listPanel")[0].clientHeight;
            $("#listPanel").animate({scrollTop: scrollHeight}, 300);

            var minHeight = parseInt($("#inputText").css("minHeight"));
            if( $(this)[0].clientHeight !== minHeight){
                $("#sendBtn").css("height",minHeight);
                $("#emojiBtn").css("height",minHeight);
                $("#listPanel").css("height","calc(100vh - 40px - " + minHeight + "px)")
            }

        })
        var t = null;
        $("#inputText").emoji({
            button: "#emojiBtn",
            showTab: true,
            animation: 'slide',
            icons: [{
                name: "QQ表情",
                path: "/static/emoji/src/img/qq/",
                maxNum: 91,
                excludeNums: [41, 45, 54],
                file: ".gif",
                placeholder: "#qq_{alias}#"
            },{
                name: "贴吧表情",
                path: "/static/emoji/src/img/tieba/",
                maxNum: 50,
                file: ".jpg",
                placeholder: "#tieba_{alias}#"
            }]
        }).on("input propertychange",function () {
            var height = $(this)[0].clientHeight,
            minHeight = parseInt($(this).css("minHeight"));
            if(height > minHeight){
                $("#sendBtn").css("height",height);
                $("#emojiBtn").css("height",height);
                $("#listPanel").css("height","calc(100vh - 40px - " + height + "px)")
            }else if(height < minHeight){
                height = minHeight;
                $("#sendBtn").css("height",height);
                $("#emojiBtn").css("height",height);
                $("#listPanel").css("height","calc(100vh - 40px - "+height+"px)");
            }
        })
        $("#emojiBtn").click(function (event) {
            setTimeout(function () {
                $(".emoji_container").css({
                    top: "",
                    bottom: $("#emojiBtn").css("height")
                });
            },1);
        })

        $.get('/api/wall/activeVote?openid=<%= openid %>&username=<%= username %>',function(data){
            if(!!data && data != '-1'){
                var html = `<div id="votePanel" data-vote-id="${data.voteId}">
                    <div style="border-bottom:1px solid rgb(57,138,202);text-align:center;">
                        <span style="flex:3;padding:3px 5px;background:rgba(57,138,202,.7);border-radius:0 2em 2em 0;">投票主题</span>
                        <span style="flex:7;color:white;">${data.title}</span>
                    </div>
                    `
                for(var i = 0;i < data.options.length;i++){
                    html+=`<p data-option-id="${data.options[i].id}"  data-vote-count="${data.options[i].count || 0}">
                        <span>${data.options[i].content}</span>
                        <span class="voteCount">${data.options[i].count || 0}</span>
                        `
                    if(data.settings.type == "0"){
                        html += `<i><img src="${data.options[i].imgsrc}"></i></p>`
                    }
                }
                html += `<div id="voteSubmit">
                    <span>选好了吗😉</span>
                    <span>okay!👌</span></div></div>`
                //显示投票界面
                $('#voteShow').PopupLayer({
                    content: html, // 内容，可以传入纯文本或类名或html
                    target: "body", // 把弹出层添加到的目标节点
                    to: "right",   // 向哪个方向展开
                    screenRatio: .7, // 占屏幕百分比
                    blur: true, // 是否开启毛玻璃效果
                    blurAreas: "#listPanel",    //默认body > *
                    color: "#000", // 文本颜色
                    backgroundColor: "#eee", // 背景颜色
                    contentToggle: false, // 点击content是否关闭弹出层
                    // closeBtn: null,  // 指定关闭按钮
                    voteSettings: data.settings
                    // closeCallbackBefore: null,   //关闭前执行的函数
                    // openCallback: null, // 展开的回调
                    // closeCallback: null // 关闭的回调
                })
                $("#votePanel").children("p").on("click",function(){
                    if($(this).attr("data-vote-choose") == "1"){
                        $(this).attr({"data-vote-choose":"0"}).css({
                            background: "initial",
                            transform: "scale(1,1)"
                        },200)
                    }else{
                        if(data.settings.check == "0"){
                            $("[data-vote-choose='1']").attr({"data-vote-choose":"0"}).css({
                                background: "initial",
                                transform: "scale(1,1)"
                            },200)
                        }
                        $(this).attr({"data-vote-choose":"1"}).css({
                            background: "rgba(100, 205, 100, 0.3)",
                            transform: "scale(1.1,1.1)"
                        },200)
                    }
                })
                $("#voteSubmit").click(function(){
                    //验证是否投过票
                    var info = {
                        nickname: "<%= nickname %>",
                        openid: "<%= openid %>"
                    }
                    allChat.emit("vote_check",info)
                })
            }
        })

        $('body').on({
            'click':function(e){
                var target = e.target;
                if(target == $("#plusBtn")[0]){
                    let bottom = $("#inputBox").height()
                    $("#plusPanel").css({
                        display:'flex',
                        opacity:'0',
                        bottom:0
                    }).addClass('plusPanelShow').animate({
                        bottom:bottom
                    },300);
                }else{
                    $("#plusPanel").removeClass('plusPanelShow').css({
                        display: 'none',
                        bottom:0
                    });
                }
            }
        })
    })
</script>
